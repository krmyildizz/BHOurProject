                    <div class="summernote" data-plugin-summernote data-plugin-options='{ "height": 10, "codemirror": { "theme": "ambiance" } }'><<textarea rows="1" cols="10" ng-model="selected.ManufacturingPlace"></textarea></div>
                </div>
